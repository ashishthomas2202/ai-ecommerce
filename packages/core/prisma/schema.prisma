 datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
 }

 generator client {
  provider = "prisma-client-js"
 }

 model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
 }

 model Order {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
 }
